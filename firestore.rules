rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Feedback collection rules
    match /feedback/{docId} {
      // Only logged-in users can create feedback for themselves
      allow create: if request.auth != null 
            && request.resource.data.uid == request.auth.uid;

      // Allow the owner OR any user with an admin document to read entries
      allow read: if request.auth != null
            && (request.auth.uid == resource.data.uid
              || exists(/databases/$(database)/documents/admins/$(request.auth.uid)));

      // Allow updates/deletes by the owner or admins
      allow update, delete: if request.auth != null
                && (request.auth.uid == resource.data.uid
                  || exists(/databases/$(database)/documents/admins/$(request.auth.uid)));
    }

    // Admin collection rules
    match /admins/{uid} {
      allow create: if request.auth != null && request.auth.uid == uid;
      allow read, update, delete: if request.auth != null && request.auth.uid == uid;
    }

    // Bus routes collection rules
    match /bus_routes/{docId} {
      // Anyone can read bus routes
      allow read: if true;
      
      // Only admins can create, update, or delete bus routes
      allow create, update, delete: if request.auth != null 
            && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Notifications collection rules
    match /notifications/{docId} {
      // Anyone authenticated can read notifications
      allow read: if request.auth != null;
      
      // Only admins can create, update, or delete notifications
      allow create, update, delete: if request.auth != null 
            && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
  }
}
